<table class="table table-striped table-bordered table-condensed records_list">
    <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'Name'|trans, 'name') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Comments'|trans, 'comments') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Uploaded'|trans, 'uploaded') }}</th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.comments }}</td>
                <td>{% if entity.uploaded %}{{ entity.uploaded|localizeddate() }}{% endif%}</td>
                <td>
                    <ul class="unstyled">
                        <li>
                            <a href="{{ path('file_show', { 'id': entity.id }) }}"><i class="icon-book"></i> {{ 'Show'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('file_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> {{ 'Edit'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('file_download', { 'id': entity.id }) }}"><i class="icon-download-alt"></i> {{ 'Download'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
