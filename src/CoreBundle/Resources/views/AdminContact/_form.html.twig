{% form_theme form 'Celsius3CoreBundle:Form:fields.html.twig' %}

<div class="row">
    <div class="col-md-6">
        <div class="form-group {% if not form.surname.vars.valid %} has-error {% endif %}">
            {{ form_label(form.surname, null, { 'label_attr': {'class': 'col-md-2 control-label'} }) }}
            <div class="col-md-10">
                {{ form_widget(form.surname, { 'attr': {'class': 'form-control'} }) }}
                {% for error in form.surname.vars.errors %}
                    <p class="text-danger">{{ error.message }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group {% if not form.name.vars.valid %} has-error {% endif %}">
            {{ form_label(form.name, null, { 'label_attr': {'class': 'col-md-2 control-label'} }) }}
            <div class="col-md-10">
                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                {% for error in form.name.vars.errors %}
                    <p class="text-danger">{{ error.message }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<br>

