<div class="row">
    <div class="col-md-6">
        <div class="form-group {% if not form.type.vars.valid %} has-error {% endif %}">
            {{ form_label(form.type, null, { 'label_attr': {'class': 'col-md-2 control-label'} }) }}
            <div class="col-md-10">
                {{ form_widget(form.type, { 'attr': {'class': 'form-control'} }) }}
                {% for error in form.type.vars.errors %}
                    <p class="text-danger">{{ error.message }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group {% if not form.user_autocomplete.vars.valid %} has-error {% endif %}">
            {{ form_label(form.user_autocomplete, null, { 'label_attr': {'class': 'col-md-2 control-label'} }) }}
            <div class="col-md-10">
                {{ form_widget(form.user_autocomplete, { 'attr': {'class': ('form-control ' ~ form.user_autocomplete.vars.attr.class) } }) }}
                {% for error in form.user_autocomplete.vars.errors %}
                    <p class="text-danger">{{ error.message }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<br>

<div class="row">
    <div class="col-md-4">
        <div class="form-group {% if not form.country.vars.valid %} has-error {% endif %}">
            {{ form_label(form.country, null, { 'label_attr': {'class': 'col-md-3 control-label'} }) }}
            <div class="col-md-9">
                {{ form_widget(form.country, { 'attr': {'class': 'form-control country-select'} }) }}
                {% for error in form.country.vars.errors %}
                    <p class="text-danger">{{ error.message }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group {% if not form.institution.vars.valid %} has-error {% endif %}">
            {{ form_label(form.institution, null, { 'label_attr': {'class': 'col-md-2 control-label'} }) }}
            <div class="col-md-10">
                {{ form_widget(form.institution, { 'attr': {'class': 'form-control institution-select'} }) }}
                {% for error in form.institution.vars.errors %}
                    <p class="text-danger">{{ error.message }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<br>

<div class="row">
    {% for child in form.children %}
        {% if not child.rendered and "hidden" not in child.vars.block_prefixes and child.vars.name != 'recaptcha' %}
            <div class="col-md-6">
                <div class="form-group has-feedback {% if not child.vars.valid %} has-error {% endif %}">
                    {{ form_label(child, null, { 'label_attr': {'class': 'col-md-2 control-label'} }) }}
                    <div class="col-md-10">
                        {% set class = (child.vars.attr.class is defined) ? child.vars.attr.class : '' %}
                        {% if child.vars.required %}
                            {{ form_widget(child, { attr: { 'class': 'form-control ' ~ class, 'required': true } }) }}
                        {% else %}
                            {{ form_widget(child, { attr: { 'class': 'form-control ' ~ class } }) }}
                        {% endif %}
                    </div>
                </div>
                {% for error in form.institution.vars.errors %}
                    <p class="text-danger">{{ error.message }}</p>
                {% endfor %}
            </div>
        {% endif %}
    {% endfor %}
</div>
