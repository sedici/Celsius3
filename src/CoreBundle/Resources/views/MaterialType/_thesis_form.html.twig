{% form_theme form 'Celsius3CoreBundle:Form:fields.html.twig' %}

<div class="form-group {% if not form.materialData.title.vars.valid %} has-error {% endif %}">
    {{ form_label(form.materialData.title, null, { 'label_attr': {'class': 'col-md-2 control-label'} }) }}
    <div class="col-md-10">
        {{ form_widget(form.materialData.title, { 'attr': {'class': 'form-control'} }) }}
        {% for error in form.materialData.title.vars.errors %}
            <p class="text-danger">{{ error.message }}</p>
        {% endfor %}
    </div>
</div>

