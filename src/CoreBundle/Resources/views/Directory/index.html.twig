{% extends 'Celsius3CoreBundle:Layout:directory_layout.html.twig' %}

{% block title %}
    {{ 'Directory'|trans }}
{% endblock %}

{% block content %}
    <div class="row">
        <div id="description" class="col-md-6">
            {{ directory.get('instance_description').value|raw }}
        </div>
        <div id="news" class="col-md-6">
            <h3>
                {{ 'Latest News'|trans }}
                <a href="{{path('rss_news')}}" class="fa fa-rss" title="RSS"></a>
            </h3>
            {% for news in lastNews %}
                {% include 'Celsius3CoreBundle:Public:_news.html.twig' %}
                {% include 'Celsius3CoreBundle:Public:_news_modal.html.twig' %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
