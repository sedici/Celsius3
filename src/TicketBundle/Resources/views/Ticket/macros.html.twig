{% macro status_btn(status, text, small = false) %}
    {% spaceless %}
        {% if status == 10 %}
            <button class="btn btn-warning {{ small ? 'btn-xs' : '' }} disabled active"><span
                        class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;{{ text|upper }}</button>
        {% elseif status == 11 %}
            <button class="btn btn-info {{ small ? 'btn-xs' : '' }} disabled active"><span
                        class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;{{ text|upper }}</button>
        {% elseif status == 12 %}
            <button class="btn btn-info {{ small ? 'btn-xs' : '' }} disabled active"><span
                        class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;{{ text|upper }}</button>
        {% elseif status == 13 %}
            <button class="btn btn-info {{ small ? 'btn-xs' : '' }} disabled active"><span
                        class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;{{ text|upper }}</button>
        {% elseif status == 14 %}
            <button class="btn btn-success {{ small ? 'btn-xs' : '' }} disabled active"><span
                        class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;{{ text|upper }}</button>
        {% elseif status == 15 %}
            <button class="btn btn-danger {{ small ? 'btn-xs' : '' }} disabled active"><span
                        class="glyphicon glyphicon-folder-close"></span>&nbsp;&nbsp;{{ text|upper }}</button>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% macro status_alert(status, text) %}
    {% spaceless %}
        {% if status == 10 %}
            <div class="alert alert-warning" role="alert"><span class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;{{ 'MESSAGE_STATUS_CHANGED'|trans({'%status%': text|upper }) }}
