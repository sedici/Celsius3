            </div>
        {% else %}
            <div class="alert alert-danger" role="alert"><span
                        class="glyphicon glyphicon-star"></span>&nbsp;&nbsp;{{ 'MESSAGE_PRIORITY_CHANGED'|trans({'%priority%': text|upper }) }}
            </div>
        {% endif %}
    {% endspaceless %}
{% endmacro %}
