{% form_theme form 'Celsius3CoreBundle:Form:fields.html.twig' %}


<div class="row">
    <div class="col-md-12">
        <div class="form-group {% if not form.email.vars.valid %} has-error {% endif %}">
            {{ form_label(form.email, null, { 'label_attr': {'class': 'col-md-2 control-label'} }) }}
