{% for child in form.children %}
    {% if not child.rendered and "hidden" not in child.vars.block_prefixes and child.vars.name != 'observaciones' %}
        <div class="row">
            <div class="col-md-12">
                <div class="form-group {% if not child.vars.valid %} has-error {% endif %}">
                    {{ form_label(child, null, { 'label_attr': {'class': 'col-md-2 control-label'} }) }}
                    <div class="col-md-10">
                        {% set class = (child.vars.attr.class is defined) ? child.vars.attr.class : '' %}
                        {{ form_widget(child, { 'attr': { 'class': 'form-control ' ~ class } }) }}
                        {% for error in child.vars.errors %}
                            <p class="text-danger">{{ error.message }}</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endfor %}

