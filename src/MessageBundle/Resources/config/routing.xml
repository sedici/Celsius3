<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="fos_message_inbox" path="/">
        <default key="_controller">Celsius3MessageBundle:Message:inbox</default>
        <option key="expose">true</option>
    </route>

    <route id="fos_message_sent" path="/sent">
        <default key="_controller">Celsius3MessageBundle:Message:sent</default>
    </route>

    <route id="fos_message_deleted" path="/deleted">
        <default key="_controller">Celsius3MessageBundle:Message:deleted</default>
    </route>

    <route id="fos_message_search" path="/search">
        <default key="_controller">Celsius3MessageBundle:Message:search</default>
    </route>

    <route id="fos_message_thread_new" path="/new">
        <default key="_controller">Celsius3MessageBundle:Message:newThread</default>
        <option key="expose">true</option>
    </route>
    
    <route id="fos_message_mark_read" path="/mark_read" methods="POST">
        <default key="_controller">Celsius3MessageBundle:Message:markAsRead</default>
    </route>

    <route id="fos_message_thread_delete" path="/{threadId}/delete" methods="POST DELETE">
        <default key="_controller">Celsius3MessageBundle:Message:delete</default>
    </route>

    <route id="fos_message_thread_undelete" path="/{threadId}/undelete" methods="POST">
        <default key="_controller">Celsius3MessageBundle:Message:undelete</default>
    </route>

    <route id="fos_message_thread_view" path="/{threadId}">
        <default key="_controller">Celsius3MessageBundle:Message:thread</default>
        <option key="expose">true</option>
    </route>

</routes>
