{{ form_start(form, { 'action': path('fos_user_change_password'), 'method': 'POST', 'attr': { 'class': 'form-horizontal', 'role': 'form', 'novalidate': 'novalidate' } }) }}

<div class="form-group {% if not form.current_password.vars.valid %} has-error {% endif %}">
    {{ form_label(form.current_password, null, { label_attr: { class: 'col-sm-3 control-label pull-rigth' } }) }}
    <div class="col-sm-9">
        {{ form_widget(form.current_password, { attr: { class: 'form-control' } }) }}
        {% for error in form.current_password.vars.errors %}
            <p class="text-danger">{{ error.message }}</p>
        {% endfor %}
    </div>
</div>

<div class="form-group {% if not form.plainPassword.first.vars.valid %} has-error {% endif %}">
    {{ form_label(form.plainPassword.first, null, { label_attr: { class: 'col-sm-3 control-label pull-rigth' } }) }}
    <div class="col-sm-9">
        {{ form_widget(form.plainPassword.first, { attr: { class: 'form-control' } }) }}
        {% for error in form.plainPassword.first.vars.errors %}
            <p class="text-danger">{{ error.message }}</p>
        {% endfor %}
    </div>
</div>

<div class="form-group {% if not form.plainPassword.second.vars.valid %} has-error {% endif %}">
    {{ form_label(form.plainPassword.second, null, { label_attr: { class: 'col-sm-3 control-label pull-rigth' } }) }}
    <div class="col-sm-9">
        {{ form_widget(form.plainPassword.second, { attr: { class: 'form-control' } }) }}
        {% for error in form.plainPassword.second.vars.errors %}
            <p class="text-danger">{{ error.message }}</p>
        {% endfor %}
    </div>
</div>

<button type="submit" class="btn btn-primary submit-button">
    <i class="icon-ok"></i> {{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}
</button>
{{ form_end(form) }}
