<ul class="list-unstyled pull-right actions">
    <li>
        <a href="{{ path('superadmin_mails_edit', { 'id': element.id }) }}"><span class="glyphicon glyphicon-pencil"></span> {{ 'Edit'|trans }}</a>
    </li>
    <li>
        <a href="{{ path('superadmin_mails_change_state', { 'id': element.id }) }}">
            {% if element.enabled %}
                <span class="glyphicon glyphicon-remove"></span> {{ 'Disable'|trans }}
            {% else %}
                <span class="glyphicon glyphicon-ok"></span> {{ 'Enable'|trans }}
            {% endif %}
        </a>
    </li>
</ul>
