{% extends 'Celsius3CoreBundle:Layout:layout.html.twig' %}

{% block title %}
    {{ 'Login'|trans }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset( 'build/login.css') }}"/>
{% endblock %}

{% block content %}
    <div class="col-xs-12">
        <div class="login-box">
            <div class="login-box-body">
                <p class="login-box-msg">{{ 'login' | trans | first_upper }}</p>
                <form action="{{ path('fos_user_security_check') }}" method="post" class="form" role="form">
                    {% if error %}
                        <div class="alert alert-danger fade in">
                            <a href="#" class="close" data-dismiss="alert">&times;</a>
                            <strong>{{ error.messageKey | trans(error.messageData, 'security') }}</strong>
                        </div>
                    {% endif %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    <div class="form-group has-feedback">
                        <input type="text" id="username" class="form-control" name="_username"
                               value="{{ last_username }}"
                               placeholder="{{ 'label.username' | trans({}, 'Celsius3CoreBundle_Form') | first_upper }}"/>
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" id="password" class="form-control" name="_password"
                               placeholder="{{ 'label.password' | trans({}, 'Celsius3CoreBundle_Form') | first_upper }}"/>
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>

                    <div class="checkbox ">
                        <label>
                            <input type="checkbox" id="remember_me" class="" name="_remember_me" value="on"/>
                            {{ 'label.remember_me' | trans({}, 'Celsius3CoreBundle_Form') | first_upper }}
                        </label>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-primary submit-button">
                                <span class="glyphicon glyphicon-ok"></span>
                                {{ 'label.login' | trans({}, 'Celsius3CoreBundle_Form') | first_upper }}
                            </button>
                            <a href="{{ path('fos_user_resetting_request') }}"
                               class="">{{ 'link.resseting_question' | trans({}, 'Celsius3CoreBundle_Form') | first_upper }}</a>
                        </div>
                    </div>
                </form>

            </div>
            <!-- /.login-box-body -->
        </div>
        <!-- /.login-box -->
    </div>
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset( 'build/login.js') }}"></script>
    {% endblock %}

{% endblock content %}
