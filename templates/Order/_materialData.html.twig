<div class="panel panel-default ">
    <div class="panel-heading">{{ form_label(form.materialData) }}</div>

    <div class="panel-body">

        {{ form_errors(form.materialData) }}

        {% if (material == 'journal') %}
            {% include 'MaterialType/_journal_form.html.twig' %}
        {% endif %}

        {% if (material == 'book') %}
            {% include 'MaterialType/_book_form.html.twig' %}
        {% endif %}

        {% if (material == 'congress') %}
            {% include 'MaterialType/_congress_form.html.twig' %}
        {% endif %}

        {% if (material == 'thesis') %}
            {% include 'MaterialType/_thesis_form.html.twig' %}
        {% endif %}

        {% if (material == 'patent') %}
            {% include 'MaterialType/_patent_form.html.twig' %}
        {% endif %}

        {% if (material == 'newspaper') %}
            {% include 'MaterialType/_newspaper_form.html.twig' %}
        {% endif %}
    </div>
</div>
