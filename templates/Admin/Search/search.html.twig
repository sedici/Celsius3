{% extends 'Admin/Dashboard/layout.html.twig' %}

{% block title %}
    {{ 'Search results'|trans }}
{% endblock %}

{% block content %}

    {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) ~ '?keyword=' ~ keyword %}

    <h3>{{ 'Search results'|trans }}</h3>
    <div class="row">
        <div class="col-md-9">
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
            {% for e in pagination %}
                {% set element = e.order %}
                {% if element is not empty %}
                    {% include 'Admin/Order/_index_element.html.twig' %}
                {% endif %}
            {% endfor %}
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
        <div class="col-md-3">
            {% include 'Admin/Search/_aggregations.html.twig' %}
        </div>
    </div>

    {% include 'Admin/Search/_search_widget.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('build/search.js') }}"></script>
{% endblock %}
