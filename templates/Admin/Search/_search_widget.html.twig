<div id="celsius-search">
    <form action="{{ path('admin_search') }}" method="GET" role="form">
        <div class="input-group">
            <span class="input-group-btn search-hidden">
                <button class="btn btn-lg btn-primary mbtn">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </span>
            <input type="text" name="keyword" id="keyword" value="{{ app.request.get('keyword') }}" class="form-control input-lg search-hidden" placeholder="{{ 'Search text' | trans }}" />
            <span class="input-group-btn">
                <button class="btn btn-lg btn-primary sbtn">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </span>
        </div>
    </form>
</div>
